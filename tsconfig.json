{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "rootDir": "./src",
    "outDir": "./lib/",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
      "@interfaces/*": ["src/interfaces/*"]
    }
  },
  "include": ["src"]
}
